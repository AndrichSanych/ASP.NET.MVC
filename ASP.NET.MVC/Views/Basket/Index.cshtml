@model List<ProductDto>;

<div class="card text-center">
    <div class="card-header">
        My Basket
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>

        <ul class="list-group">
            @foreach (var i in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @i.Name - @i.CategoryName
                    <span class="badge text-bg-primary rounded-pill">@i.Price$</span>
                </li>
            }
        </ul>
        <br />
        <div>
            <a asp-controller="Orders" asp-action="Create" class="btn btn-success" margin 2px>Submit</a>
        </div>
        <div>
            <a asp-controller="Home" class="btn btn-primary" margin 2px>Continue Shopping</a>
        </div>
    </div>
    <div class="card-footer text-body-secondary">
        Items: @Model.Count
    </div>
</div>