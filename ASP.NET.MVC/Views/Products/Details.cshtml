@using BusinessLogic.Interfaces;
@model ProductDto;
@inject IBasketService basketService;
<div>
    
</div>
<div class="card text-center details-card">
    <h5 class="card-header">
        <a href="@ViewBag.ReturnUrl" class="btn btn-dark my-3"><i class="bi bi-arrow-left"></i></a>
        <span>Product Information</span>
    </h5>
    <div class="card-body">
        @if (Model.Discount > 0)
        {
            <div>
            <span class="badge bg-primary">SALE</span>
            </div>
        }
        <h5 class="card-title fs-1">@Model.Name</h5>
        <p class="card-text fs-4">@Model.Price - @Model.CategoryName</p>
        <div>
            @if(basketService.isExist(Model.Id))
            {
                <a asp-controller="Basket" asp-action="Remove" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-secondary">
                <i class="bi bi-cart3">
                    <br />
                    Remove from basket
                </i>
                </a>
            }
            else
            {
                <a asp-controller="Basket" asp-action="Add" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary">
                    <i class="bi bi-cart3">
                        <br />
                        Add to basket
                    </i>
                </a>
            }
        </div>
        <a href="#" class="btn btn-success my-3"><i class="bi bi-bag-fill">
            <br />
            BUY</i></a>
        <div class="image-card">
            <img src="@Model.ImageUrl" alt="Image Product" />
        </div>
        <p class="card-text">@Model.Description</p>
    </div>
</div> 