@model Product;
<div>
    <a href="@ViewBag.ReturnUrl" class="btn btn-dark my-3"><i class="bi bi-backspace-fill"></i></a>
</div>
<div class="card text-center details-card">
    <h5 class="card-header">Product Information</h5>
    <div class="card-body">
        <h5 class="card-title fs-1">@Model.Name</h5>
        <p class="card-text fs-4">@Model.Price - @Model.Category?.Name</p>
        <a href="#" class="btn btn-success my-3"><i class="bi bi-bag-fill">
            <br />
            BUY</i></a>
        <div>
            <img src="@Model.ImageUrl" alt="Image Product" />
        </div>
        <p class="card-text">@Model.Description</p>
    </div>
</div> 