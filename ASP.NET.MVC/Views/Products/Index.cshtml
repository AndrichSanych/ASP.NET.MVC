@model List<ProductDto>;
<h1>Product panel</h1>
<p>You can manage the available products here.</p>

<div>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>  
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Discount</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr class="align-middle">
                <th scope="row">@i.Id</th>
                <th scope="row">
                    <img height="40" class="rounded-3 zoom" src="@i.ImageUrl" alt="@i.Name"/>
                </th>
                <td>@i.Name
                    @if(i.Discount>0)
                    {
                        <span class="badge bg-primary">SALE</span>
                    }
                </td>
                <td>@i.Price$</td>
                <td>@i.CategoryName</td>
                <td>@i.Discount%</td>
                <td>
                    @if(i.InStock)
                    {
                        <span class="badge bg-success">In Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Out of Stock</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@i.Id" asp-route-returnUrl="@Context.Request.Path"><i class="bi bi-info-circle"></i></a>
                        <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@i.Id"><i class="bi bi-pencil"></i></a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@i.Id"><i class="bi bi-trash3"></i></a>
                    </div> 
                </td>
            </tr> 
        }   
    </tbody>
</table> 
<p class="text-center">Items : @Model.Count</p>